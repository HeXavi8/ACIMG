/*分类*/
.class_part{
  display: flex;
  align-items: center;
  width: 750rpx;
  height: 80rpx;
  background: #FFFFFF;
}

.class_scroll{
  display: inline-block;
  /* flex-direction: row;
  white-space: nowrap;  */
  height: 80rpx;
}

.class_container{
  display: inline-block;
  width: 104rpx;
  height: 48rpx;
  margin-left: 24rpx;
  background: #302FA6;
  border-radius: 26rpx;
  color:#000000;

}

.class_text{
  display: flex;
  justify-content: center;
  align-items: center;
  align-content: center;
}

.class_text text{
  margin-top: 12rpx;
  width: 48rpx;
  height: 24rpx;
  font-size: 23rpx;
  font-weight: 400;
  /* color: #FFFFFF; */
  line-height: 24rpx;
}
/*图册*/
.image_item{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 0rpx 40rpx;
}

.item_outer_box{
  width: 320rpx;
  margin: 24rpx 0 0 0 ;
  overflow: hidden;
}

.image_box{
  height: 240rpx;
  width: 320rpx;
  background:black;
  position: relative;
  border-radius: 20rpx;
}

.left_image{
  width: 200rpx;
  height: 240rpx;
  position: absolute;
  left:0;
  right:0;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.right_image_top{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  border-top-right-radius: 20rpx;
  right: 0;
  top:0;
}

.right_image_bottom{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  border-bottom-right-radius: 20rpx;
  right: 0;
  bottom: 0;
}

.item_title{
  margin: 16rpx 0 16rpx 10rpx;
  color: rbga(0,0,0,.8);
  font-size: 28rpx;
}

.item_addr{
  margin-left: 10rpx;
  color: rgba(0,0,0,.4);
  font-size: 20rpx;
}

.upload{
  position: fixed;
  bottom: 25rpx;
  right: 30rpx;
  width: 96rpx;
  height: 96rpx;
}

