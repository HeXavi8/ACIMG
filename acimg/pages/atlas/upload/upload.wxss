/* pages/upload/upload.wxss */
.top_bg{
  height: 120rpx;
  background-color: #fff;
}

.disable_scroll{
  height: 100vh; 
  overflow:hidden;
}

.top_cancel{
  position: fixed;
  top: 62rpx;
  left: 30rpx;
  width: 20%;
  padding: 2rpx 0;
  font-size: 32rpx;
  color: rgba(0,0,0,80%);
  z-index: 99;
}

.top_title{
  position: fixed;
  top: 62rpx;
  left:304rpx;
  font-size: 36rpx;
  color:rgba(0,0,0,80%);
  z-index: 99;
}

.input_name{
  width: 100%;
  height: 80rpx;
  background: white;
  color:rgba(0,0,0,40%);
  font-size: 56rpx;
  border-bottom: 12rpx solid rgba(0,0,0,5%);
  padding: 30rpx;
}

.desc_container{
  height: 306rpx;
  width: 100%;
  border-bottom: 12rpx solid rgba(0,0,0,5%);
  font-size: 30rpx;
}

.title_desc{
  margin: 30rpx;
  line-height: 30rpx;
  position: absolute;
}

.text_desc{
  position: absolute;
  margin: 86rpx 0 0 30rpx;
  color: rgba(0,0,0,40%);
  overflow: hidden;
}

.key_container{
  height: 192rpx;
  width: 100%;
  border-bottom: 12rpx solid rgba(0,0,0,5%);
  font-size: 30rpx;
}

.key_desc{
  margin: 30rpx;
  line-height: 30rpx;
  position: absolute;
}

.key_text_desc{
  position: absolute;
  margin: 86rpx 0 0 30rpx;
  color: rgba(0,0,0,40%);
  overflow: hidden;
}

.key_info{
  position: absolute;
  margin: 34rpx 270rpx 0 140rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #302FA6;
}

.tag_container{
  padding: 30rpx;
  height: 200rpx;
}

.tag_text{
  font-size: 36rpx;
  color: rgba(0,0,0,80%);
}

.tag_add{
  font-size: 36rpx;
  margin-top: 30rpx;
  width: 116rpx;
  height: 54rpx;
  text-align: center;
  border: 2rpx solid #302FA6;
  border-radius: 28rpx;
}

.commit_btn{
  margin-top: 30rpx;
  left: 60rpx;
  padding: 30rpx 191rpx;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  background-color: #302FA6;
  border-radius: 52rpx;
}

.pop_up{
  background: rgba(0,0,0,.2);
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.pop_box{
  position: fixed;
  background: #fff;
  height: 342rpx;
  width: 590rpx;
  top: 496rpx;
  left: 80rpx;
  border-radius: 20rpx;
  z-index: 99;
}

.pop_box_top{
  height: 36rpx;
  width: 100%;
  padding: 30rpx 0rpx;
  text-align: center;
  font-size: 36rpx;
  color: rgba(0,0,0,.8);
  position: relative;
}

.close_btn{
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  right: 30rpx;
  top: 24rpx;
}

.pop_box_content{
  text-align: center;
  padding: 30rpx 102rpx;
  font-size:28rpx;
  color: rgba(0,0,0,.8);
  position: relative;
}

.btn_cancel, .btn_back{
  padding: 16rpx 40rpx;
  border: 2rpx solid rgba(0,0,0,.2);
  border-radius: 30rpx;
  width: 56rpx;
  height: 34rpx;
  font-size: 28rpx;  position: absolute;
}

.btn_cancel{
  left: 120rpx;
  top: 146rpx;
  color: rgba(0,0,0,.8);
}

.btn_back{
  right: 120rpx;
  top: 146rpx;
  color: #fff;
  background: #302FA6;
}