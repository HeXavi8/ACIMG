/* components/setting.wxss */
.popup {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}
.container {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 590rpx;
  height: 342rpx;
  background: #ffffff;
  border-radius: 20rpx;
  transform: translate(-50%, -50%);
  overflow: hidden;
}
.title {
  position: absolute;
  top: 0;
  left: 0;
  width: 590rpx;
  height: 96rpx;
  background: #ffffff;
}
.username {
  width: 185rpx;
  height: 36rpx;
  font-size: 36rpx;
  font-family: AlibabaPuHuiTi-Regular, AlibabaPuHuiTi;
  color: rgba(0, 0, 0, 0.8);
  line-height: 36rpx;
  margin: 30rpx 205rpx 30rpx 207rpx;
}
.img {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: 24rpx;
  right: 30rpx;
}
.content {
  position: absolute;
  top: 126rpx;
  left: 80rpx;
  width: 430rpx;
  height: 70rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 35rpx;
}
.input {
  position: absolute;
  left: 30rpx;
  top: 18rpx;
  height: 28rpx;
  font-size: 28rpx;
  font-family: AlibabaPuHuiTi-Regular, AlibabaPuHuiTi;
  color: rgba(0, 0, 0, 0.4);
}
.btn-no {
  position: absolute;
  bottom: 40rpx;
  left: 120rpx;
  width: 136rpx;
  height: 60rpx;
  background: #ffffff;
  border-radius: 30rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.2);
}

.btn-ok {
  position: absolute;
  bottom: 40rpx;
  right: 120rpx;
  width: 136rpx;
  height: 60rpx;
  background: #302fa6;
  border-radius: 30rpx;
}
.text {
  position: absolute;
  top: 16rpx;
  left: 40rpx;
  width: 56rpx;
  height: 28rpx;
  font-size: 28rpx;
  font-family: AlibabaPuHuiTi-Regular, AlibabaPuHuiTi;
  color: rgba(0, 0, 0, 0.8);
  line-height: 28rpx;
}
.text-ok {
  color: white;
}
