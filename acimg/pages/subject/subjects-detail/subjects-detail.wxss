/* pages/subject/subjects-detail/subjects-detail.wxss */
.disable_scroll {
  height: 100vh;
  overflow: hidden;
}


.top_container {
  width: 100%;
  height: 560rpx;
  position: relative;
}

.top_container image {
  width: 100%;
  height: 100%;
}

.subject_title {
  margin: 60rpx auto 30rpx;
  font-size: 56rpx;
  color: rgba(0, 0, 0, .8);
  text-align: center;
}

.top_back {
  position: absolute;
  top: 62rpx;
  left: 30rpx;
  width: 48rpx;
  height: 48rpx;
  z-index: 99;
}

.top_back {
  width: 48rpx;
  height: 48rpx;
  z-index: 99;
}

.top_title {
  position: absolute;
  top: 60rpx;
  left: 340rpx;
  font-size: 36rpx;
  color: rgba(0, 0, 0, 80%);
  color: #fff;
}

.item_tag,
.item_tag_time {
  color: rgba(0, 0, 0, .4);
  font-size: 28rpx;
  text-align: center;
}

.item_tag_time {
  margin-top: 20rpx;
}

.center_photo {
  text-align: center;
  margin: 35rpx 0 35rpx;
}

.center_photo image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.detail_container {
  margin: 0 40rpx;
}

.detail_text {
  color: rgba(0, 0, 0, .8);
  font-size: 28rpx;
  line-height: 38rpx;
}

.show_more {
  color: #302FA6;
  margin: 20rpx 0 40rpx;
  font-size: 28rpx;
  line-height: 28rpx;
}

.ic_map {
  width: 48rpx;
  height: 48rpx;
}

.location {
  position: relative;
}

.loc_text {
  position: absolute;
  left: 54rpx;
  top: 6rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, .8);
}

.tag_container_outer {
  margin-top: 30rpx;
  width: 240rpx;
  height: 60rpx;
  background: #302FA6;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tag_container_outer text {
  width: 121rpx;
  height: 28rpx;
  font-size: 28rpx;
  font-family: AlibabaPuHuiTi-Regular, AlibabaPuHuiTi;
  font-weight: 400rpx;
  color: #FFFFFF;
  line-height: 28rpx;
}

.all_image_text {
  margin: 60rpx 0 40rpx 40rpx;
  color: rgba(0, 0, 0, .8);
}

.all_image {
  background: pink;
  height: 616rpx;
  width: 100%;
}

/*图册*/
.image_item {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 0rpx 40rpx;
}

.item_outer_box {
  width: 320rpx;
  margin: 24rpx 0 0 0;
  overflow: hidden;
}

.image_box {
  height: 240rpx;
  width: 320rpx;
  background: blue;
  position: relative;
  border-radius: 20rpx;
}

.left_image {
  width: 200rpx;
  height: 240rpx;
  position: absolute;
  left: 0;
  right: 0;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.right_image_top {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  border-top-right-radius: 20rpx;
  right: 0;
  top: 0;
}

.right_image_bottom {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  border-bottom-right-radius: 20rpx;
  right: 0;
  bottom: 0;
}

.item_title {
  margin: 16rpx 0 16rpx 10rpx;
  color: rbga(0, 0, 0, .8);
  font-size: 28rpx;

  font-family: AlibabaPuHuiTi-Regular, AlibabaPuHuiTi;
  font-weight: 400rpx;
  color: rgba(0, 0, 0, 0.8);
  line-height: 28rpx;
}

.item_addr {
  margin-left: 10rpx;
  color: rgba(0, 0, 0, .4);
  font-size: 20rpx;
}